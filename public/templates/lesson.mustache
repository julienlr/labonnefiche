<div class="wrap">

    {{>sidebar_online}}

    {{#lesson}}
    <div class="container-fluid conteneurVisu">
        <div clas="row">
            <div class="mt-3 col-md-6 offset-md-2" id="titre">
                <h3>{{lesson_name}}</h3>
               <p id="description"> Par {{prenom}} {{nom}}, le {{dateCours}}</p>
            </div>
        </div>
        <div class="row">
            <div class="my-3 col-md-7 offset-md-1">
                <button aria-label="Fermer" class="btn btn-primary tags" onclick="myDialog.close()">{{tags}} X</button>
            </div>
            <div class="my-3 col-md-2 offset-md-1">
                <button type="button" class="btn btn-danger"><i class="fas fa-cloud-download-alt"></i>TELECHARGER</button>
            </div>
        </div>
        <div class="row">
            <div class="my-2 col-md-4 offset-md-1">
                <!-- Récupérer le chemin sur le serveur via la bdd sheet_path -->
                <iframe id="inlineFrameExample" title="Inline Frame Example" width="600" height="400" src="{{URL}}"></iframe>
            </div>
            <aside class="my-2 col-md-3 offset-md-3">
                <h5>Note {{note}}/20</h5>
                <div class="rating">
                    <a href="#5" title="Donner 5 étoiles">☆</a>
                    <a href="#4" title="Donner 4 étoiles">☆</a>
                    <a href="#3" title="Donner 3 étoiles">☆</a>
                    <a href="#2" title="Donner 2 étoiles">☆</a>
                    <a href="#1" title="Donner 1 étoile">☆</a>
                </div>
                <div class="media mt-3 shadow-textarea">
                    <div class="form-group basic-textarea rounded-corners">
                        <textarea class="form-control z-depth-1 zoneTexte" id="exampleFormControlTextarea345" rows="2" placeholder="Ajouter un commentaire..."></textarea>
                    </div>
                </div>
                <button class="btn btn-primary submitCommentaire" type="submit">Noter</button>
                {{#comments}}
                <div class="media commentaire">
                    <i class="fas fa-user-circle fa-2x"></i>
                    <div class="media-body">
                        <p class="enTete">{{comment_user_firstname}} {{comment_user_surname}}</p>
                        <p class="enTete" id="dateCommentaire">{{comment_date}}</p>
                        <p>{{comment_content}}</p>
                    </div>
                </div>
                {{/comments}}
            </aside>
        </div>
    </div>
    {{/lesson}}
</div>